{
  "manifest_version": 3,
  "name": "Flowritext ChatGPT Prompts Organizer",
  "version": "1.2",
  "description": "Firefox Add-on that organizes your ChatGPT prompts under each chat topic in the sidebar.",
  "author": "Flowritext",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://chatgpt.com/*",
    "https://chat.openai.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chatgpt.com/*",
        "https://chat.openai.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "flowritext-chatgpt-prompts-organizer-addon@flowritext.com",
      "strict_min_version": "109.0"
    }
  }
}