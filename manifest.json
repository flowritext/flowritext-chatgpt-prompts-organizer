{
  "manifest_version": 3,
  "name": "Flowritext ChatGPT Prompts Organizer",
  "version": "1.0",
  "description": "Firefox Addon that groups your prompts by organizing them under your chat topics.",
  "author": "Flowritext",
  "permissions": ["activeTab"],
  "host_permissions": ["https://chatgpt.com/"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"], 
      "js": ["content.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "flowritext-chatgpt-prompts-organizer-addon@flowritext.com"
    }
  }

}
